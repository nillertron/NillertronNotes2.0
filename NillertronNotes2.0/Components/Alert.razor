@inject IJSRuntime JsRuntime
@if (ShowComponent)
{
    <div id="myAlert" class="@_alertClass" role="alert">
        <button class="close" data-dismiss="alert" aria-label="Close">
            <span @onclick="HideMessage" aria-hidden="true">&times;</span>
        </button>
        <p>@Message</p>
    </div>
}


@code {
    [Parameter]
    public bool Succes { get; set; }
    [Parameter]
    public string Message { get; set; }
    [Parameter]
    public bool ShowComponent { get => _showComponent; set { _showComponent = value; StateHasChanged(); } }
    private bool _showComponent;

    private string _alertClass { get { return Succes ? "alert alert-dismissible alert-success fade show" : "alert alert-dismissible alert-danger fade show"; } }

    void HideMessage()
    {
        ShowComponent = false;
    }
}
